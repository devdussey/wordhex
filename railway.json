{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "bash -c 'npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed && npm run server'",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/leaderboard",
    "healthcheckTimeout": 300
  },
  "variables": {
      "DATABASE_URL": "${{ POSTGRES_URL }}",
      "NODE_ENV": "production",
      "PORT": "3001",
      "TRUST_PROXY": "1",
      "ALLOWED_ORIGINS": "https://wordhex-discord-app.vercel.app,https://*.discordsays.com,https://discord.com,http://localhost:3000"
    }
}